<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/background">
    <TextView
            android:text="Hiker's Watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title_textView"
            android:textColor="@android:color/background_light"
            android:textSize="40sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="75dp"/>
    <TextView
            android:text="Latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lat_textView"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="170dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>


    <TextView
            android:text="Longitude"
            android:layout_width="wrap_content"
            android:layout_height="27dp" android:id="@+id/long_textView"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/lat_textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/lat_textView" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/accuracy_textView"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/long_textView"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
    <TextView
            android:text="Altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/altitude_textView"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/accuracy_textView" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>

    <TextView
            android:text="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/address_textView"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/altitude_textView" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>